<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/police1">

    <TextView
        android:id="@+id/police"
        android:layout_width="168dp"
        android:layout_height="87dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:background="@drawable/ic_launcher_foreground"
        android:text="POLICE"
        android:textColor="@color/material_dynamic_neutral_variant20"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/branch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/police"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="50dp"
        android:text="Station branch"
        android:textSize="25dp"
        android:textColor="#710E0E"/>

    <EditText
        android:id="@+id/branchedit"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/police"
        android:layout_alignBaseline="@+id/branch"
        android:layout_toRightOf="@+id/branch"
        android:inputType="text"
        android:background="#37393737"/>

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/branch"
        android:layout_marginStart="14dp"
        android:layout_marginTop="50dp"
        android:text="Branch address"
        android:textSize="25dp"
        android:textColor="#710E0E"/>

    <EditText
        android:id="@+id/addressedit"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/branchedit"
        android:layout_alignBaseline="@+id/address"
        android:layout_toRightOf="@+id/address"
        android:inputType="text"
        android:background="#37393737"/>

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/address"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="49dp"
        android:text="Station number"
        android:textSize="25dp"
        android:textColor="#710E0E"/>

    <EditText
        android:id="@+id/numberedit"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addressedit"
        android:layout_toRightOf="@id/number"
        android:inputType="number"
        android:layout_alignBaseline="@+id/number"
        android:background="#37393737"/>

    <TextView
        android:id="@+id/alternumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/number"
        android:layout_centerVertical="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="49dp"
        android:text="Alter number"
        android:textSize="25dp"
        android:textColor="#710E0E"/>

    <EditText
        android:id="@+id/alteredit"
        android:layout_width="252dp"
        android:layout_height="35dp"
        android:layout_below="@+id/numberedit"
        android:layout_alignBaseline="@+id/alternumber"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="42dp"
        android:layout_toRightOf="@id/alternumber"
        android:background="#37393737"
        android:inputType="number" />

    <Button
        android:id="@+id/save"
        android:layout_width="124dp"
        android:layout_height="66dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="79dp"
        android:text="save" />

</RelativeLayout>