<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/redden2">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:text="REDDEN"
        android:textColor="#FA0858AE"
        android:textSize="45dp" />

    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="176dp"
        android:text="USER"
        android:textColor="#106161"
        android:textSize="35dp" />

    <Button
        android:id="@+id/userlogin"
        android:layout_width="160dp"
        android:layout_height="58dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="92dp"
        android:layout_marginTop="178dp"
        android:layout_marginEnd="38dp"
        android:layout_toEndOf="@+id/user"
        android:text="login" />

    <TextView
        android:id="@+id/police"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="39dp"
        android:text="POLICE"
        android:textColor="#106161"
        android:textSize="35dp" />

    <Button
        android:id="@+id/policelogin"
        android:layout_width="152dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="69dp"
        android:layout_marginTop="258dp"
        android:layout_marginEnd="38dp"
        android:layout_toEndOf="@+id/police"
        android:text="login" />

    <TextView
        android:id="@+id/hospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/police"
        android:layout_marginStart="35dp"
        android:layout_marginTop="52dp"
        android:text="HOSPITAL"
        android:textColor="#106161"
        android:textSize="35dp" />

    <Button
        android:id="@+id/hospitallogin"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="353dp"
        android:layout_marginEnd="26dp"
        android:layout_toEndOf="@+id/hospital"
        android:text="login" />

    <TextView
        android:id="@+id/ambulance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hospital"
        android:layout_marginStart="35dp"
        android:layout_marginTop="40dp"
        android:text="RESCUE"
        android:textColor="#106161"
        android:textSize="35dp" />

    <Button
        android:id="@+id/ambulancelogin"
        android:layout_width="109dp"
        android:layout_height="58dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="195dp"
        android:text="login" />

    <TextView
        android:id="@+id/primary"
        android:layout_width="183dp"
        android:layout_height="99dp"
        android:layout_below="@+id/ambulance"
        android:layout_marginStart="35dp"
        android:layout_marginTop="48dp"
        android:text="PRIMARY CONTECT"
        android:textColor="#106161"
        android:textSize="35dp" />

    <Button
        android:id="@+id/primarylogin"
        android:layout_width="159dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="91dp"
        android:layout_toEndOf="@+id/primary"
        android:text="login" />
</RelativeLayout>