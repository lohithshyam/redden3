<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/hospital2">

    <TextView
        android:id="@+id/police"
        android:layout_width="wrap_content"
        android:layout_height="71dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text="Hospital"
        android:textColor="@color/material_dynamic_neutral_variant20"
        android:textSize="45dp" />

    <TextView
        android:id="@+id/branch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/police"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="55dp"
        android:text="hospital branch"
        android:textColor="#0B0200"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/branchedit"
        android:layout_width="230dp"
        android:layout_height="35dp"
        android:layout_below="@+id/police"
        android:layout_alignBaseline="@+id/branch"
        android:layout_marginLeft="-4dp"
        android:layout_toRightOf="@+id/branch"
        android:background="#37393737"
        android:inputType="text" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/branch"
        android:layout_marginStart="14dp"
        android:layout_marginTop="50dp"
        android:text="Branch address"
        android:textSize="25dp"
        android:textColor="#0B0200"/>

    <EditText
        android:id="@+id/addressedit"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_below="@id/branchedit"
        android:layout_alignBaseline="@+id/address"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="0dp"
        android:layout_toRightOf="@+id/address"
        android:background="#37393737"
        android:inputType="text" />

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/address"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="49dp"
        android:text="hospital number"
        android:textSize="25dp"
        android:textColor="#0B0200"/>

    <EditText
        android:id="@+id/numberedi"
        android:layout_width="224dp"
        android:layout_height="41dp"
        android:layout_below="@+id/addressedit"
        android:layout_alignBaseline="@+id/number"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="0dp"
        android:layout_toRightOf="@id/number"
        android:background="#37393737"
        android:inputType="number" />

    <TextView
        android:id="@+id/alternumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/number"
        android:layout_centerVertical="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="49dp"
        android:text="Alter number"
        android:textSize="25dp"
        android:textColor="#0B0200"/>

    <EditText
        android:id="@+id/numberedit"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/numberedi"
        android:layout_alignBaseline="@+id/alternumber"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="4dp"
        android:layout_toRightOf="@+id/alternumber"
        android:background="#37393737" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="158dp"
        android:layout_height="223dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="352dp"
        android:layout_marginTop="-43dp"
        android:layout_marginEnd="7dp"
        app:srcCompat="@drawable/hospital" />

    <Button
        android:id="@+id/button2"
        android:layout_width="124dp"
        android:layout_height="66dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="113dp"
        android:text="save" />

</RelativeLayout>


