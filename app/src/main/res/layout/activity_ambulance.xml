<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/redden1">

    <TextView
        android:id="@+id/handing"
        android:layout_width="287dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="73dp"
        android:layout_marginTop="28dp"
        android:text="Ambulance"
        android:textColor="#F8090000"
        android:textSize="45dp" />

    <TextView
        android:id="@+id/branch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/handing"
        android:layout_marginStart="14dp"
        android:layout_marginTop="37dp"
        android:text="Branch"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/branchedit"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_below="@+id/handing"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="0dp"
        android:layout_toRightOf="@+id/branch"
        android:background="#37393737"
        android:inputType="text"
        android:textColor="#050000"/>

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/branch"
        android:layout_marginStart="14dp"
        android:layout_marginTop="39dp"
        android:text="Address"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/addressedit"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/branchedit"
        android:layout_alignBaseline="@+id/address"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="3dp"
        android:layout_toRightOf="@+id/address"
        android:background="#37393737"
        android:inputType="text"
        android:textColor="#050000"/>

    <TextView
        android:id="@+id/number"
        android:layout_width="123dp"
        android:layout_height="91dp"
        android:layout_below="@+id/address"
        android:layout_marginStart="14dp"
        android:layout_marginTop="44dp"
        android:text="Phone number"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/numbere"
        android:layout_width="269dp"
        android:layout_height="34dp"
        android:layout_below="@+id/addressedit"
        android:layout_alignBaseline="@+id/number"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/number"
        android:background="#37393737"
        android:inputType="number"
        android:textColor="#050000"/>

    <TextView
        android:id="@+id/alternumber"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_below="@id/number"
        android:layout_marginStart="14dp"
        android:layout_marginTop="33dp"
        android:text="Alter number"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/numberedit"
        android:layout_width="265dp"
        android:layout_height="35dp"
        android:layout_below="@id/numbere"
        android:layout_alignBaseline="@+id/alternumber"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/alternumber"
        android:background="#37393737"
        android:textColor="#050000"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="124dp"
        android:layout_height="66dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="162dp"
        android:text="save" />

</RelativeLayout>